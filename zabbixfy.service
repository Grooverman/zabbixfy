[Unit]
Description=Gunicorn instance to serve Zabbixfy
After=network.target

[Service]
User=ubuntu
Group=www-data
WorkingDirectory=/opt/zabbixfy
Environment="PATH=/opt/zabbixfy/.virtualenv/bin"
ExecStart=/opt/zabbixfy/.virtualenv/bin/gunicorn --workers 3 --bind 127.0.0.1:5000 -m 007 wsgi:app

[Install]
WantedBy=multi-user.target

